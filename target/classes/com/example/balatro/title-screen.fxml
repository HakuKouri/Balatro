<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.media.MediaView?>
<?import javafx.scene.text.Font?>

<Pane fx:id="titleScreen" prefHeight="720.0" prefWidth="1280.0" stylesheets="@../../css/style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.balatro.controller.TitleScreenController">
   <children>
      <MediaView fx:id="mediaTitleBackground" fitHeight="720.0" fitWidth="1280.0" />
      <ImageView fitHeight="594.0" fitWidth="916.0" layoutX="187.0" layoutY="14.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../images/balatro.png" />
         </image></ImageView>
      <HBox fx:id="mainButtonBox" alignment="CENTER" layoutX="260.0" layoutY="550.0" prefHeight="105.0" prefWidth="770.0" styleClass="shadow-b">
         <children>
            <Button fx:id="btnTitlePlay" mnemonicParsing="false" onAction="#openNewGameMenu" prefHeight="75.0" prefWidth="180.0" text="Play" textAlignment="CENTER" textFill="WHITE">
               <HBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </HBox.margin>
               <styleClass>
                  <String fx:value="shadow-b" />
                  <String fx:value="btn-blue" />
               </styleClass></Button>
            <Button fx:id="btnTitleOption" mnemonicParsing="false" onAction="#openOptionsMenu" prefHeight="70.0" prefWidth="180.0" text="Options" textFill="WHITE">
               <HBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </HBox.margin>
               <styleClass>
                  <String fx:value="shadow-b" />
                  <String fx:value="btn-yellow" />
               </styleClass></Button>
            <Button fx:id="btnTitleQuit" mnemonicParsing="false" onAction="#closeGame" prefHeight="70.0" prefWidth="180.0" text="Quit" textFill="WHITE">
               <HBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </HBox.margin>
               <styleClass>
                  <String fx:value="shadow-b" />
                  <String fx:value="btn-red" />
               </styleClass></Button>
            <Button fx:id="btnTitleCollection" mnemonicParsing="false" prefHeight="75.0" prefWidth="180.0" text="Collection" textFill="WHITE">
               <HBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </HBox.margin>
               <styleClass>
                  <String fx:value="shadow-b" />
                  <String fx:value="btn-green" />
               </styleClass>
               <font>
                  <Font name="balatro Regular" size="12.0" />
               </font></Button>
         </children>
      </HBox>
      <Pane fx:id="panePlayMenu" layoutX="345.0" layoutY="111.0" minHeight="400.0" minWidth="600.0" prefHeight="200.0" prefWidth="200.0" />
   </children>
</Pane>
