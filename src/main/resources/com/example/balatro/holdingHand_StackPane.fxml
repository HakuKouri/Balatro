<VBox alignment="CENTER" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.balatro.controller.HoldingHandController">
   <children>
       <StackPane fx:id="HoldingHand" maxWidth="720.0" prefHeight="200.0" prefWidth="720.0" />
      <Label fx:id="handCardsCounterLabel" styleClass="font-white" text="0/8" />
       <GridPane fx:id="handButtonBox" maxWidth="450.0" prefHeight="70.0" prefWidth="450.0">
           <columnConstraints>
               <ColumnConstraints halignment="CENTER" maxWidth="168.0" minWidth="10.0" percentWidth="30.0" prefWidth="161.0" />
               <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" maxWidth="283.0" minWidth="10.0" percentWidth="40.0" prefWidth="134.0" />
               <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" maxWidth="164.0" minWidth="10.0" percentWidth="30.0" prefWidth="155.0" />
           </columnConstraints>
           <rowConstraints>
               <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
               <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
           </rowConstraints>
           <children>
               <Button mnemonicParsing="false" onAction="#playSelectedCards" text="Play Hand" GridPane.rowSpan="2147483647" />
               <Button mnemonicParsing="false" onAction="#discardSelectedCards" text="Discard" GridPane.columnIndex="2" GridPane.rowSpan="2147483647" />
               <HBox alignment="CENTER" prefHeight="57.0" prefWidth="90.0" spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
                   <children>
                       <Button mnemonicParsing="false" onAction="#sortRank" text="Rank" />
                       <Button mnemonicParsing="false" onAction="#sortSuit" text="Suit" />
                   </children>
               </HBox>
               <Label text="Sort: Hand" textFill="WHITE" GridPane.columnIndex="1" />
           </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
       </GridPane>
   </children>
</VBox>
